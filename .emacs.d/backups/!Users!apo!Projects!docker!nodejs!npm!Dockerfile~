FROM update

MAINTAINER ap0sec <apo.t.laboratory@gmail.com>

RUN curl -sL https://deb.nodesource.com/setup | bash -- && \
    yum -y install nodejs && \
    npm update -g npm && \
    npm cache clean && \
    npm i -g n && \
    n stable && \
    yum -y purge nodejs npm && \
    npm i -g gulp-cli

RUN mkdir -p /data/www
VOLUME ["/data"]
WORKDIR /data/www

ENTRYPOINT ["npm"]
CMD["-h"]
