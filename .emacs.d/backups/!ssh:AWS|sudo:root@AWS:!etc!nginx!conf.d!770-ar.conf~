server {
    listen 80;
    server_name 770-ar.ap0sec.me;
    return 301 https://$host$request_uri;
}

server {
    listen 443;
    ssl on;
    
    server_name 770-ar.ap0sec.me;
    ssl_certificate /etc/letsencrypt/live/770-ar.ap0sec.me/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/770-ar.ap0sec.me/privkey.pem;


    root /var/www/770-ar/html;

    index index.html index.htm; 

    include /etc/nginx/conf.d/letsencrypt;

     location / {
       try_files $uri $uri/ =404;
     }

     location /src/ {
       index ar.html;
     }


}