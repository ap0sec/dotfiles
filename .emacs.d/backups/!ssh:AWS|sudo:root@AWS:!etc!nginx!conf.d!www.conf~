server {
    listen 80;
    server_name www.ap0sec.me;
    return 301 https://$host$request_uri;
}

ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
server {
    listen 443;
    ssl on;
    server_name www.ap0sec.me;
    ssl_certificate /etc/letsencrypt/live/ap0sec.me/fullchain.pem; # サーバー証明書のパス
    ssl_certificate_key /etc/letsencrypt/live/ap0sec.me/privkey.pem; # 秘密鍵のパス

    root /var/www/html;

    index index.html index.htm;

    location /camera/ {
        index index.html index.htm;
    }    

    location / {
        try_files $uri $uri/ =404;
    }
}
