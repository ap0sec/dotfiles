FROM ubuntu:bionic

MAINTAINER ap0sec <apo.t.laboratory@gmail.com>

EXPOSE 80 443

RUN apt-get -y update && apt-get -y install nginx

COPY ./conf/kocone.conf /etc/nginx/conf.d/kocone.conf
COPY ./conf/pm.conf /etc/nginx/conf.d/pm.conf
COPY ./conf/quest.conf /etc/nginx/conf.d/quest.conf
COPY ./conf/el.conf /etc/nginx/conf.d/el.conf
COPY ./conf/yourest.conf /etc/nginx/conf.d/yourest.conf
COPY ./conf/seat.conf /etc/nginx/conf.d/seat.conf

CMD ["/usr/sbin/nginx","-g","daemon off;"]
