[user]
	name = Apo
	email = contact@ap0.dev
[init]
	defaultBranch = master
[pull]
	rebase = false
[core]
	editor = emacsclient
[alias]
	ls = log -5
	graph = log --graph --date=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	gp = !git log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s' | peco
[ghq]
	root = ~/.ghq

